<section class="main-sections">

  <!-- 이달의 인기 도서 -->
  <section class="section-box">
    <h2>이달의 인기 도서</h2>

	<!-- 👉 더보기 버튼 -->
  <a href="/popular" class="more-button">더보기</a>

  <div class="book-list">
  <% if (popularBooks && popularBooks.length > 0) { %>
    <% popularBooks.forEach(book => { %>
      <div class="book-item">
        <img src="<%= book.imageUrl %>" alt="<%= book.title %>" width="100" height="150">
        <p><strong><%= book.title %></strong></p>
      </div>
    <% }) %>
  <% } else { %>
    <p>데이터가 없습니다.</p>
  <% } %>
</div>
  </section>

  <!-- 추천 도서 -->
  <section class="section-box">
    <h2>추천 도서</h2>
    <div class="book-list recommended-books">
      <!-- 추천 도서 자리 -->
    </div>
  </section>

 <!-- 커뮤니티 -->
<section class="section-box">
  <h2>커뮤니티</h2>
  <div class="community-reviews">
    <% if (latestPosts && latestPosts.length > 0) { %>
      <% latestPosts.forEach(post => { %>
        <div class="review-box">
          <a href="/community/post.html?id=<%= post.post_id %>">
            <strong><%= post.title %></strong>
          </a><br>
          <small>작성자: <%= post.author_nickname || '익명' %></small><br>
          <small>작성일: <%= new Date(post.created_at).toLocaleString() %></small>
        </div>
      <% }) %>
    <% } else { %>
      <p>최근 게시글이 없습니다.</p>
    <% } %>
  </div>
  <a href="/community/communityList.html">전체 게시글 보기 →</a>
</section>


  <!-- 주변 도서관 정보 -->
  <section class="section-box">
    <h2>가까운 도서관</h2>
  </section>

</section>

